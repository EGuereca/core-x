---
import { Image } from 'astro:assets';
import Logo from '../../public/LogoP.png';
import LogoS from '../../public/LogoS.png';
import '../styles/global.css';

---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200/50 shadow-sm transition-all duration-300" id="header">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo Section -->
      <div class="flex items-center">
        <a href="/" class="flex items-center group relative">
          <!-- Isotipo solo en móvil -->
          <div class="md:hidden relative">
            <Image 
              src={Logo} 
              alt="Isotipo Core-X" 
              class="w-17 h-14 rounded-lg transform group-hover:scale-110 transition-all duration-300 group-hover:shadow-lg" 
              loading="eager"
            />
            <div class="absolute inset-0 rounded-lg bg-gradient-to-br from-[#003366]/0 to-[#336699]/0 group-hover:from-[#003366]/10 group-hover:to-[#336699]/10 transition-all duration-300"></div>
          </div>
          <!-- Logotipo solo en escritorio/tablet -->
          <div class="hidden md:block">
            <Image 
              src={LogoS} 
              alt="Logotipo Core-X" 
              class="h-40 w-auto transform group-hover:scale-105 transition-all duration-300" 
              loading="eager"
            />
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-2 lg:space-x-4">
        <a 
          href="#servicios" 
          class="relative px-4 py-2 font-medium text-[#0A0A0A] rounded-lg transition-all duration-300 hover:text-[#003366] group overflow-hidden"
        >
          <span class="relative z-10">Servicios</span>
          <span class="absolute inset-0 bg-gradient-to-r from-[#DDE3EA]/0 to-[#DDE3EA]/0 group-hover:from-[#DDE3EA]/50 group-hover:to-[#DDE3EA]/80 transition-all duration-300 rounded-lg"></span>
        </a>
<!--         
        <a 
          href="#proyectos" 
          class="relative px-4 py-2 font-medium text-[#0A0A0A] rounded-lg transition-all duration-300 hover:text-[#003366] group overflow-hidden"
        >
          <span class="relative z-10">Proyectos</span>
          <span class="absolute inset-0 bg-gradient-to-r from-[#DDE3EA]/0 to-[#DDE3EA]/0 group-hover:from-[#DDE3EA]/50 group-hover:to-[#DDE3EA]/80 transition-all duration-300 rounded-lg"></span>
        </a> -->
        
        <a 
          href="#tecnologias" 
          class="relative px-4 py-2 font-medium text-[#0A0A0A] rounded-lg transition-all duration-300 hover:text-[#003366] group overflow-hidden"
        >
          <span class="relative z-10">Tecnologías</span>
          <span class="absolute inset-0 bg-gradient-to-r from-[#DDE3EA]/0 to-[#DDE3EA]/0 group-hover:from-[#DDE3EA]/50 group-hover:to-[#DDE3EA]/80 transition-all duration-300 rounded-lg"></span>
        </a>
        
        <a 
          href="#nosotros" 
          class="relative px-4 py-2 font-medium text-[#0A0A0A] rounded-lg transition-all duration-300 hover:text-[#003366] group overflow-hidden"
        >
          <span class="relative z-10">Nosotros</span>
          <span class="absolute inset-0 bg-gradient-to-r from-[#DDE3EA]/0 to-[#DDE3EA]/0 group-hover:from-[#DDE3EA]/50 group-hover:to-[#DDE3EA]/80 transition-all duration-300 rounded-lg"></span>
        </a>
        
        <a 
          href="#contacto" 
          class="relative ml-4 px-6 py-2.5 rounded-lg font-semibold text-white bg-[#003366] overflow-hidden group transition-all duration-300 hover:shadow-xl hover:-translate-y-0.5"
        >
          <span class="relative z-10">Contacto</span>
          <span class="absolute inset-0 bg-gradient-to-r from-[#336699] to-[#003366] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
          <span class="absolute inset-0 bg-gradient-to-br from-white/0 to-white/0 group-hover:from-white/10 group-hover:to-white/0 transition-all duration-300"></span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden p-2 rounded-lg text-[#0A0A0A] hover:bg-[#DDE3EA] hover:text-[#003366] transition-all duration-300 relative group"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 transition-transform duration-300" id="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 pt-2 animate-fadeIn">
      <div class="flex flex-col space-y-2 bg-white/80 backdrop-blur-sm rounded-lg p-2 shadow-lg">
        <a 
          href="#servicios" 
          class="mobile-link font-medium py-3 px-4 rounded-lg text-[#0A0A0A] hover:bg-[#DDE3EA] hover:text-[#003366] transition-all duration-300 hover:pl-6"
        >
          Servicios
        </a>
        <!-- <a 
          href="#proyectos" 
          class="mobile-link font-medium py-3 px-4 rounded-lg text-[#0A0A0A] hover:bg-[#DDE3EA] hover:text-[#003366] transition-all duration-300 hover:pl-6"
        >
          Proyectos
        </a> -->
        <a 
          href="#tecnologias" 
          class="mobile-link font-medium py-3 px-4 rounded-lg text-[#0A0A0A] hover:bg-[#DDE3EA] hover:text-[#003366] transition-all duration-300 hover:pl-6"
        >
          Tecnologías
        </a>
        <a 
          href="#nosotros" 
          class="mobile-link font-medium py-3 px-4 rounded-lg text-[#0A0A0A] hover:bg-[#DDE3EA] hover:text-[#003366] transition-all duration-300 hover:pl-6"
        >
          Nosotros
        </a>
        <a 
          href="#contacto" 
          class="mobile-link px-6 py-3 rounded-lg font-semibold text-center text-white bg-[#003366] hover:bg-[#336699] transition-all duration-300 shadow-md hover:shadow-lg mt-2"
        >
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out;
  }

  .mobile-link {
    position: relative;
    overflow: hidden;
  }

  .mobile-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background: linear-gradient(to bottom, #003366, #336699);
    transition: height 0.3s ease;
    border-radius: 0 2px 2px 0;
  }

  .mobile-link:hover::before {
    height: 70%;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.toggle('hidden');
    
    // Toggle icon
    const openPath = menuIcon?.querySelector('.menu-open');
    const closePath = menuIcon?.querySelector('.menu-close');
    
    if (!isHidden) {
      openPath?.classList.add('hidden');
      closePath?.classList.remove('hidden');
      menuIcon?.classList.add('rotate-90');
    } else {
      openPath?.classList.remove('hidden');
      closePath?.classList.add('hidden');
      menuIcon?.classList.remove('rotate-90');
    }
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      const openPath = menuIcon?.querySelector('.menu-open');
      const closePath = menuIcon?.querySelector('.menu-close');
      openPath?.classList.remove('hidden');
      closePath?.classList.add('hidden');
      menuIcon?.classList.remove('rotate-90');
    });
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!mobileMenuButton?.contains(target) && !mobileMenu?.contains(target)) {
      mobileMenu?.classList.add('hidden');
      const openPath = menuIcon?.querySelector('.menu-open');
      const closePath = menuIcon?.querySelector('.menu-close');
      openPath?.classList.remove('hidden');
      closePath?.classList.add('hidden');
      menuIcon?.classList.remove('rotate-90');
    }
  });

  // Add scroll effect to header
  let lastScroll = 0;
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });
</script>

---
import "../styles/global.css";
---

<div id="contacto" class="relative py-24 bg-gradient-to-br from-[#FFFFFF] via-[#DDE3EA] to-[#BFC8D8] overflow-hidden">
	<!-- Decoración de fondo -->
	<div class="absolute inset-0 bg-[url('/')] opacity-5"></div>
	<div class="absolute top-0 right-0 w-80 h-80 bg-[#003366]/20 rounded-full blur-3xl"></div>
	<div class="absolute bottom-0 left-0 w-96 h-96 bg-[#336699]/20 rounded-full blur-3xl"></div>

	<div class="container relative mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Título -->
		<div class="text-center mb-20">
			<h2 class="text-4xl md:text-5xl font-extrabold mb-6 text-[#003366] tracking-tight">
				Conecta con Nuestro Equipo
			</h2>
			<p class="text-lg md:text-xl text-[#0A0A0A]/80 max-w-2xl mx-auto">
				Estamos listos para ayudarte a construir soluciones digitales innovadoras, seguras y escalables.  
				Cuéntanos sobre tu idea o proyecto y te responderemos en menos de 24 horas.
			</p>
		</div>

		<div class="grid lg:grid-cols-2 gap-12 items-center">
			<!-- Información de contacto -->
			<div class="space-y-8">
				<div class="p-8 rounded-2xl bg-white/70 shadow-lg backdrop-blur-lg border border-[#DDE3EA]/60 hover:shadow-xl transition-all duration-300">
					<h3 class="text-2xl font-semibold mb-4 text-[#003366] flex items-center gap-2">
						<span class="material-symbols-outlined text-4xl text-[#003366]">handshake</span>
						¿Por qué colaborar con nosotros?
					</h3>
					<ul class="space-y-3 text-[#0A0A0A]/90">
						<li class="flex items-start gap-3">
							<span class="material-symbols-outlined text-[#336699]">verified</span>
							Desarrolladores expertos en software empresarial y soluciones a medida.
						</li>
						<li class="flex items-start gap-3">
							<span class="material-symbols-outlined text-[#336699]">bolt</span>
							Integraciones modernas con IA, cloud y sistemas escalables.
						</li>
						<li class="flex items-start gap-3">
							<span class="material-symbols-outlined text-[#336699]">schedule</span>
							Metodología ágil: entregas continuas, comunicación transparente.
						</li>
					</ul>
				</div>

				<!-- Detalles de contacto -->
				<div class="grid sm:grid-cols-1 gap-6 mt-8">
					<div class="flex items-center gap-6 p-8 bg-white/80 rounded-2xl shadow-lg border border-[#DDE3EA]/80 hover:scale-105 transition-transform">
						<div class="p-5 bg-[#003366] text-white rounded-full flex items-center justify-center">
							<span class="material-symbols-outlined text-4xl">mail</span>
						</div>
						<div>
							<p class="text-lg text-[#0A0A0A]/70 font-medium">Correo</p>
							<p class="font-bold text-[#003366] text-xl break-all">contacto@core-x.lat</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Formulario -->
			<form
				class="bg-white/80 backdrop-blur-md border border-[#DDE3EA]/60 shadow-2xl p-10 rounded-2xl transform hover:scale-[1.01] transition-all duration-300"
				id = "contact-form"
			>
				<h3 class="text-2xl font-bold mb-6 text-[#003366]">Envíanos un mensaje</h3>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label for="nombre" class="block text-sm font-semibold text-[#003366] mb-2">Nombre</label>
						<input
							type="text"
							id="nombre"
							name="nombre"
							required
							class="w-full px-4 py-3 rounded-lg border border-[#DDE3EA] focus:ring-2 focus:ring-[#003366] focus:border-[#003366] outline-none transition-all"
							placeholder="Tu nombre completo"
						/>
					</div>

					<div>
						<label for="email" class="block text-sm font-semibold text-[#003366] mb-2">Correo electrónico</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="w-full px-4 py-3 rounded-lg border border-[#DDE3EA] focus:ring-2 focus:ring-[#003366] focus:border-[#003366] outline-none transition-all"
							placeholder="ejemplo@correo.com"
						/>
					</div>
				</div>

				<div class="mt-6">
					<label for="mensaje" class="block text-sm font-semibold text-[#003366] mb-2">Mensaje</label>
					<textarea
						id="mensaje"
						name="mensaje"
						rows="5"
						required
						class="w-full px-4 py-3 rounded-lg border border-[#DDE3EA] focus:ring-2 focus:ring-[#003366] focus:border-[#003366] outline-none transition-all resize-none"
						placeholder="Cuéntanos sobre tu proyecto o requerimiento..."
					></textarea>
				</div>

				<div class="mt-8 text-center">
					<button
						id="submit-button"
						type="submit"
						class="bg-[#003366] text-white px-10 py-4 rounded-xl font-semibold shadow-lg transform hover:scale-105 hover:bg-[#336699] transition-all duration-300"
					>
						Enviar Mensaje
					</button>
					<p id="form-status" class="mt-4 text-sm text-center font-semibold"></p>
				</div>

				<p class="mt-4 text-sm text-[#0A0A0A]/60 text-center">
					Nos comprometemos a proteger tu información y responder en menos de 24 horas hábiles.
				</p>
			</form>
		</div>
	</div>
</div>

<div id="success-modal" class="fixed inset-0 hidden items-center justify-center backdrop-blur-sm bg-white/30">
    <div class="bg-white/80 backdrop-blur-md p-8 rounded-lg shadow-lg text-center border border-[#DDE3EA]/60">
        <h3 class="text-2xl font-bold text-green-600 mb-4">¡Enviado!</h3>
        <p>Tu mensaje ha sido recibido con éxito. Te contactaremos pronto.</p>
        <button id="close-modal" class="mt-6 bg-[#003366] text-white px-6 py-2 rounded-lg hover:bg-[#336699] transition-colors duration-300">Cerrar</button>
    </div>
</div>

<script>
    // Seleccionamos el formulario, el botón y el mensaje de estado
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
    const statusMessage = document.getElementById('form-status') as HTMLParagraphElement;
    const modal = document.getElementById('success-modal') as HTMLDivElement;
    const closeModalButton = document.getElementById('close-modal') as HTMLButtonElement;

    closeModalButton.addEventListener('click', () => {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    });

    async function handleSubmit(event: SubmitEvent) {
        event.preventDefault(); // Evita que la página se recargue
        if (!(event.target instanceof HTMLFormElement)) return;
        const formData = new FormData(event.target);

        // Cambiamos el texto del botón para dar feedback
        submitButton.disabled = true;
        submitButton.textContent = 'Enviando...';
        statusMessage.textContent = '';
        statusMessage.classList.remove('text-green-600', 'text-red-600');

        try {
            const response = await fetch("https://formspree.io/f/xkgqanyb", {
                method: 'POST',
                body: formData,
                headers: {
                    'Accept': 'application/json'
                }
            });

            if (response.ok) {
                // Éxito en el envío
                form.reset(); // Limpiamos el formulario
                modal.classList.remove('hidden');
                modal.classList.add('flex');
            } else {
                // Manejo de errores del servidor
                const data = await response.json();
                if (Object.hasOwn(data, 'errors')) {
                    const errorData = data as { errors: Array<{ message: string }> };
                    statusMessage.textContent = errorData.errors.map(error => error.message).join(", ");
                } else {
                    statusMessage.textContent = "Oops! Hubo un problema al enviar tu formulario.";
                }
                statusMessage.classList.add('text-red-600');
            }
        } catch (error) {
            // Manejo de errores de red
            statusMessage.textContent = "Oops! Hubo un problema de conexión.";
            statusMessage.classList.add('text-red-600');
        } finally {
            // Reactivamos el botón
            submitButton.disabled = false;
            submitButton.textContent = 'Enviar Mensaje';
        }
    }

    form.addEventListener("submit", handleSubmit);
</script>
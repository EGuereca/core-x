---
import "../styles/global.css";
import {Image} from 'astro:assets';
import Banner from '../assets/bannerCoreX.jpg';
---
<!-- Banner Hero Enorme -->
<div class="relative w-full h-screen min-h-[600px] overflow-hidden">
    <!-- Imagen de Banner -->
    <div class="absolute inset-0">
        <Image 
            src={Banner} 
            alt="Core-X Banner" 
            class="w-full h-full object-cover"
            loading="eager"
        />
    <!-- Overlay oscuro para mejorar legibilidad del texto -->
    <div class="absolute inset-0 bg-black/60"></div>
    </div>
    
    <!-- Contenido sobre el banner -->
    <div class="relative z-10 h-full flex items-center justify-center">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <div class="space-y-6">
                <h1 class="text-5xl md:text-7xl font-bold text-white drop-shadow-2xl">
                    Construimos Software<br/>que Impulsa tu Negocio
                </h1>
                <p class="text-xl md:text-2xl max-w-3xl mx-auto text-white drop-shadow-lg">
                    Soluciones tecnológicas escalables y de alto rendimiento.<br/>
                    <span class="text-lg">Desde aplicaciones web hasta sistemas empresariales complejos.</span>
                </p>
                <div class="pt-8 flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="#servicios" class="px-8 py-4 rounded-lg font-semibold transform hover:scale-105 transition-all duration-200 shadow-lg inline-block" style="background-color: #003366; color: #FFFFFF;" onmouseover="this.style.backgroundColor='#336699'" onmouseout="this.style.backgroundColor='#003366'">
                        Ver Servicios
                    </a>
                    <a href="#tecnologias" class="px-8 py-4 rounded-lg font-semibold transform hover:scale-105 transition-all duration-200 shadow-lg inline-block" style="background-color: #FFFFFF; color: #003366; border: 2px solid #003366;" onmouseover="this.style.backgroundColor='#F5F5F5'" onmouseout="this.style.backgroundColor='#FFFFFF'">
                        Tecnologías
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<div id="tecnologias" class="py-20" style="background: linear-gradient(135deg, #003366 0%, #0A0A0A 100%);">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4" style="color: #FFFFFF;">
        Stack Tecnológico
      </h2>
      <p class="text-lg max-w-2xl mx-auto" style="color: #DDE3EA;">
        Trabajamos con las tecnologías más modernas y demandadas del mercado
      </p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=react" alt="React" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">React</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=nodejs" alt="Node.js" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Node.js</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=python" alt="Python" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Python</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=typescript" alt="TypeScript" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">TypeScript</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=docker" alt="Docker" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Docker</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=aws" alt="AWS" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">AWS</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=tailwind" alt="Tailwind" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Tailwind</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=postgres" alt="PostgreSQL" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">PostgreSQL</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=mongodb" alt="MongoDB" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">MongoDB</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=nextjs" alt="Next.js" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Next.js</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=graphql" alt="GraphQL" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">GraphQL</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=laravel" alt="Laravel" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Laravel</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=androidstudio" alt="Android" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">Android</p>
      </div>
      <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
        <img src="https://skillicons.dev/icons?i=apple" alt="iOS" class="mx-auto mb-2 w-12 h-12"/>
        <p class="font-semibold text-white">iOS</p>
      </div>
        <div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200 bg-white/10">
          <img src="https://skillicons.dev/icons?i=raspberrypi" alt="Raspberry Pi" class="mx-auto mb-2 w-12 h-12"/>
          <p class="font-semibold text-white">Raspberry Pi</p>
        </div>
    </div>
    
    <div class="text-center mt-12">
      <p class="text-lg" style="color: #DDE3EA; opacity: 0.8;">
        Entre otras...
      </p>
    </div>
  </div>
</div>

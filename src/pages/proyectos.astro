---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<div id="proyectos" class="py-20" style="background-color: #FFFFFF;">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold mb-4" style="color: #003366;">
				Portafolio de Proyectos
			</h2>
			<p class="text-lg max-w-2xl mx-auto" style="color: #0A0A0A;">
				Un vistazo a soluciones que hemos construido para distintos clientes y necesidades.
			</p>
		</div>

		<div class="proyectos-grid flex flex-wrap gap-8 justify-center">
			<!-- Proyecto 1 -->
			<a href="https://karinaibarra.beauty" target="_blank" rel="noopener noreferrer" class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 bg-white basis-full md:basis-1/2 lg:basis-1/3 group">
    			<!-- Imagen del proyecto dentro de la card -->
    			<img src="/Logokarina.png" alt="Karina IV MAKEUP" class="w-full h-44 object-cover" />
				<div class="p-6">
					<!-- Idea breve del proyecto -->
					<p class="text-xs uppercase tracking-wide mb-2" style="color:#003366; opacity:.8">Sitio y reservaciones para estética</p>
					<!-- Nombre del proyecto -->
					<h3 class="text-2xl font-bold mb-2" style="color:#003366">Karina IV MAKEUP</h3>
					<!-- Descripción del proyecto -->
					<p class="text-sm mb-4" style="color:#0A0A0A">Catálogo de servicios, agenda de citas y panel administrativo escalable.</p>
					<div class="flex flex-wrap gap-2">
						<span class="text-xs px-3 py-1 rounded-full" style="background:#003366; color:#fff">Next.js</span>
						<span class="text-xs px-3 py-1 rounded-full" style="background:#003366; color:#fff">Node.js</span>
						<span class="text-xs px-3 py-1 rounded-full" style="background:#003366; color:#fff">PostgreSQL</span>
					</div>
				</div>
			</a>

		

	
	</div>
</div>

<style>
	/* Aparición suave al hacer scroll */
	#proyectos .rounded-xl { opacity: 0; transform: translateY(24px); transition: opacity .6s ease, transform .6s ease; }
	#proyectos .rounded-xl.visible { opacity: 1; transform: translateY(0); }
	#proyectos .rounded-xl:nth-child(1) { transition-delay: .1s; }
	/* Delays adicionales si hay más tarjetas */
	#proyectos .rounded-xl:nth-child(2) { transition-delay: .2s; }
	#proyectos .rounded-xl:nth-child(3) { transition-delay: .3s; }
</style>

<script>
	const projObserver = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) entry.target.classList.add('visible');
		})
	}, { threshold: 0.15, rootMargin: '0px 0px -100px 0px' });

	document.querySelectorAll('#proyectos .rounded-xl')
		.forEach(card => projObserver.observe(card));
</script>
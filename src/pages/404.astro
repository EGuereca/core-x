---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
const title = "404 | Core-X"
const description = "La página que buscas no existe."
const canonical = "https://core-x.lat/404"

---

<Layout title={title} description={description} canonical={canonical}>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center space-y-6">
            <h1 class="text-5xl md:text-7xl font-bold" style="background: linear-gradient(90deg, #003366 0%, #0A0A0A 100%); -webkit-background-clip: text; background-clip: text; color: transparent;">
                404
            </h1>
            <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: #0A0A0A;">
                La página que buscas no existe.
            </p>
            <div class="pt-8 flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/" class="px-8 py-4 rounded-lg font-semibold transform hover:scale-105 transition-all duration-200 shadow-lg inline-block" style="background-color: #003366; color: #FFFFFF;" onmouseover="this.style.backgroundColor='#336699'" onmouseout="this.style.backgroundColor='#003366'">
                    Volver al inicio
                </a>
            </div>
        </div>
    </div>
</Layout>   

---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<div id="tecnologias" class="py-20" style="background: linear-gradient(135deg, #003366 0%, #0A0A0A 100%);">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold mb-4" style="color: #FFFFFF;">
				Stack Tecnológico
			</h2>
			<p class="text-lg max-w-2xl mx-auto" style="color: #DDE3EA;">
				Trabajamos con las tecnologías más modernas y demandadas del mercado
			</p>
		</div>
		
		<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">atom</span>
				<p class="font-semibold" style="color: #FFFFFF;">React</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">hub</span>
				<p class="font-semibold" style="color: #FFFFFF;">Node.js</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">code</span>
				<p class="font-semibold" style="color: #FFFFFF;">Python</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">data_object</span>
				<p class="font-semibold" style="color: #FFFFFF;">TypeScript</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">deployed_code</span>
				<p class="font-semibold" style="color: #FFFFFF;">Docker</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">cloud</span>
				<p class="font-semibold" style="color: #FFFFFF;">AWS</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">palette</span>
				<p class="font-semibold" style="color: #FFFFFF;">Tailwind</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">database</span>
				<p class="font-semibold" style="color: #FFFFFF;">PostgreSQL</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">database</span>
				<p class="font-semibold" style="color: #FFFFFF;">MongoDB</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">rocket_launch</span>
				<p class="font-semibold" style="color: #FFFFFF;">Next.js</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">share</span>
				<p class="font-semibold" style="color: #FFFFFF;">GraphQL</p>
			</div>
			<div class="p-6 rounded-lg text-center transform hover:scale-110 transition-all duration-200" style="background-color: rgba(255, 255, 255, 0.1);">
				<span class="material-symbols-outlined text-3xl mb-2" style="color: #FFFFFF;">verified</span>
				<p class="font-semibold" style="color: #FFFFFF;">Laravel</p>
			</div>
		</div>
	</div>
</div>
